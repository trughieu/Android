<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Setting_Help.Setting_Detail.Activity_Action_History">

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rectangle_inbox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="22dp"
            android:layout_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/arrow" />
        </FrameLayout>


        <TextView
            android:id="@+id/textView15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:fontFamily="@font/inter_medium"
            android:gravity="center_horizontal|top"
            android:text="@string/actionhitory"
            android:textColor="@color/blue_text"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Space
            android:id="@+id/btn_Log_out"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="67dp"
        android:background="@drawable/corner_card"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:paddingEnd="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingStart="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_select_id"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/corner_select"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/baseline_keyboard_arrow_down_24"
                android:fontFamily="@font/inter_medium"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:text="@string/spinner_action_history_status_all"
                android:textColor="@color/blue_text"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="@+id/tv_capture"
                app:layout_constraintStart_toStartOf="@+id/tv_capture"
                app:layout_constraintTop_toBottomOf="@+id/tv_capture" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingEnd="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prompt_from"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/date_from"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/corner_select_date_from_to"
                        android:backgroundTint="@color/white"
                        android:drawableEnd="@drawable/calendar"
                        android:fontFamily="@font/inter_medium"
                        android:gravity="center_vertical"
                        android:paddingStart="20dp"
                        android:textColor="@color/blue_text"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prompt_to"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/date_to"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/corner_select_date_from_to"
                        android:backgroundTint="@color/white"
                        android:drawableEnd="@drawable/calendar"
                        android:fontFamily="@font/inter_medium"
                        android:gravity="center_vertical"
                        android:paddingStart="20dp"
                        android:textColor="@color/blue_text"
                        android:textSize="12dp" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="27dp"
                android:background="@drawable/corner_add_new_certi"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/hint_search"
                android:textColor="@color/white" />


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:paddingStart="15dp"
            android:id="@+id/rcHitory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            tools:listitem="@layout/layout_item_history" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>