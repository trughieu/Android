<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_layout_action_history"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded"
        android:orientation="horizontal">
<Space
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:fontFamily="@font/atb_digital_medium"
            android:gravity="center"
            android:text="@string/action"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:src="@drawable/baseline_close_24" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <LinearLayout
            android:id="@+id/check_all"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/all"
                android:layout_width="340dp"
                android:layout_height="21dp"
                android:layout_marginStart="20dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/atb_digital_medium"
                android:text="@string/spinner_certificate_status_all"
                android:textColor="@color/text_blue"
                android:textSize="15dp" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkBox1"
                style="@style/custom_checkbox_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:layout_width="370dp"
            android:layout_height="2dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/line_3" />

        <LinearLayout
            android:id="@+id/check_login"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/login"
                android:layout_width="340dp"
                android:layout_height="21dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/atb_digital_medium"
                android:text="@string/btn_authenticate"
                android:textColor="@color/text_blue"
                android:textSize="15dp" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkBox2"
                style="@style/custom_checkbox_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:layout_width="370dp"
            android:layout_height="2dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/line_3" />

        <LinearLayout
            android:id="@+id/check_change_password"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/change_password"
                android:layout_width="340dp"
                android:layout_height="21dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/atb_digital_medium"
                android:text="@string/button_change_password"
                android:textColor="@color/text_blue"
                android:textSize="15dp" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkBox3"
                style="@style/custom_checkbox_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:layout_width="370dp"
            android:layout_height="2dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/line_3" />

        <LinearLayout
            android:id="@+id/check_forgot_password"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="340dp"
                android:layout_height="21dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/atb_digital_medium"
                android:text="@string/forgot_password"
                android:textColor="@color/text_blue"
                android:textSize="15dp" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkBox4"
                style="@style/custom_checkbox_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:layout_width="370dp"
            android:layout_height="2dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/line_3" />

        <LinearLayout
            android:id="@+id/check_change_email"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/change_email"
                android:layout_width="340dp"
                android:layout_height="21dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/atb_digital_medium"
                android:text="@string/certificate_manage_change_email"
                android:textColor="@color/text_blue"
                android:textSize="15dp" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkBox5"
                style="@style/custom_checkbox_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>