<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_sheet_type_of_identity_document"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded"
        android:orientation="horizontal">
        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:fontFamily="@font/inter_bold"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/prompt_info_step1"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:src="@drawable/baseline_close_24" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <LinearLayout
            android:id="@+id/check_citizen_id_card"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/citizen_id_card"
                android:layout_width="340dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/spinner_document_type_citizen_id_card"
                android:textColor="@color/text_blue"
                android:textSize="15dp" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkBox1"
                style="@style/custom_checkbox_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:layout_width="370dp"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/line_3" />

        <LinearLayout
            android:id="@+id/check_identification_card"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/identification_card"
                android:layout_width="340dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/spinner_document_type_nation_id"
                android:textColor="@color/text_blue"
                android:textSize="15dp" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkBox2"
                style="@style/custom_checkbox_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:layout_width="370dp"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/line_3" />

        <LinearLayout
            android:id="@+id/check_passport"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/passport"
                android:layout_width="340dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/spinner_document_type_passport"
                android:textColor="@color/text_blue"
                android:textSize="15dp" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkBox3"
                style="@style/custom_checkbox_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>