<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:background="@drawable/bg_rounded"
        android:fontFamily="@font/inter_bold"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="@string/certificate_state"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <LinearLayout
            android:id="@+id/check_Valid"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/valid"
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/spinner_certificate_status_valid"
                android:textColor="@color/text_blue"
                android:textSize="15dp" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkBox1"
                style="@style/custom_checkbox_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:layout_width="370dp"
            android:layout_height="2dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/line_3" />

        <LinearLayout
            android:id="@+id/check_Ini"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/initialized"
                android:layout_width="340dp"
                android:layout_height="21dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/spinner_certificate_status_initialized"
                android:textColor="@color/text_blue"
                android:textSize="15dp" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkBox2"
                style="@style/custom_checkbox_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:layout_width="370dp"
            android:layout_height="2dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/line_3" />

        <LinearLayout
            android:id="@+id/check_generated"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal">

