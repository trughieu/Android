<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/pin6_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="147dp"
        android:layout_marginEnd="146dp"
        android:fontFamily="@font/inter_medium"
        android:text="@string/prompt_enter_pin_code"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/pin_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/title">

        <EditText
            android:id="@+id/txt_pin_view_1"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_pinview_disable"
            android:clickable="true"
            android:focusable="false"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/text_blue"
            android:textSize="13dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_pin_view_2"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_pinview_disable"
            android:clickable="true"
            android:focusable="false"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/text_blue"
            android:textSize="13dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_pin_view_3"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_pinview_disable"
            android:clickable="true"
            android:focusable="false"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/text_blue"
            android:textSize="13dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_pin_view_4"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_pinview_disable"
            android:clickable="true"
            android:focusable="false"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"

            android:maxLength="1"
            android:textColor="@color/text_blue"
            android:textSize="13dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_pin_view_5"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_pinview_disable"
            android:clickable="true"
            android:focusable="false"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"

            android:textColor="@color/text_blue"
            android:textSize="13dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_pin_view_6"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:background="@drawable/ic_pinview_disable"
            android:clickable="true"
            android:focusable="false"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/text_blue"
            android:textSize="13dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="86dp"
        android:layout_marginTop="110dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pin_view">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn1"
                android:layout_width="54.5dp"
                android:layout_height="54.5dp"
                android:background="@drawable/circle"
                android:fontFamily="@font/inter_medium"
                android:text="1"
                android:textColor="@drawable/text_change_press"
                android:textSize="29dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn2"

                android:layout_width="54.5dp"
                android:layout_height="54.5dp"
                android:layout_marginStart="27.7dp"
                android:background="@drawable/circle"
                android:fontFamily="@font/inter_medium"
                android:text="2"
                android:textColor="@drawable/text_change_press"
                android:textSize="29dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn3"
                android:layout_width="54.5dp"
                android:layout_height="54.5dp"
                android:layout_marginStart="27.7dp"
                android:background="@drawable/circle"
                android:fontFamily="@font/inter_medium"
                android:text="3"
                android:textColor="@drawable/text_change_press"
                android:textSize="29dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31.27dp"
            android:orientation="horizontal"
            android:textColor="@drawable/text_change_press">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn4"
                android:layout_width="54.5dp"
                android:layout_height="54.5dp"
                android:background="@drawable/circle"
                android:fontFamily="@font/inter_medium"
                android:text="4"
                android:textColor="@drawable/text_change_press"
                android:textSize="29dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn5"
                android:layout_width="54.5dp"
                android:layout_height="54.5dp"
                android:layout_marginStart="27.7dp"
                android:background="@drawable/circle"
                android:fontFamily="@font/inter_medium"
                android:text="5"
                android:textColor="@drawable/text_change_press"
                android:textSize="29dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn6"
                android:layout_width="54.5dp"
                android:layout_height="54.5dp"
                android:layout_marginStart="27.7dp"
                android:background="@drawable/circle"
                android:fontFamily="@font/inter_medium"
                android:text="6"
                android:textColor="@drawable/text_change_press"
                android:textSize="29dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31.27dp"
            android:orientation="horizontal"
            android:textColor="@drawable/text_change_press">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn7"
                android:layout_width="54.5dp"
                android:layout_height="54.5dp"
                android:background="@drawable/circle"
                android:fontFamily="@font/inter_medium"
                android:text="7"
                android:textColor="@drawable/text_change_press"
                android:textSize="29dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn8"
                android:layout_width="54.5dp"
                android:layout_height="54.5dp"
                android:layout_marginStart="27.7dp"
                android:background="@drawable/circle"
                android:fontFamily="@font/inter_medium"
                android:text="8"
                android:textColor="@drawable/text_change_press"
                android:textSize="29dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn9"
                android:layout_width="54.5dp"
                android:layout_height="54.5dp"
                android:layout_marginStart="27.7dp"
                android:background="@drawable/circle"
                android:fontFamily="@font/inter_medium"
                android:text="9"
                android:textColor="@drawable/text_change_press"
                android:textSize="29dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31.27dp"
            android:orientation="horizontal"
            android:textColor="@drawable/text_change_press">

            <Space
                android:layout_width="54.5dp"
                android:layout_height="54.5dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn0"
                android:layout_width="54.5dp"
                android:layout_height="54.5dp"
                android:layout_marginStart="27.7dp"
                android:background="@drawable/circle"
                android:fontFamily="@font/inter_medium"
                android:text="0"
                android:textColor="@drawable/text_change_press"
                android:textSize="29dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Key_delete"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="38dp"
                android:background="@drawable/outline_backspace_24"
                android:fontFamily="@font/inter_medium"
                android:gravity="center_horizontal"
                android:textColor="@drawable/text_change_press"
                android:textSize="29dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>